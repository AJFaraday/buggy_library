<h1>Check In Books</h1>

<%= form_for @check_in, html: {class: 'form-horizontal check_in'} do |f| %>

    <% if @check_in.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@check_in.errors.count, "error") %> prohibited these books from being
              checked in:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @check_in.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :card_barcode, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :card_barcode, :class => 'form-control',
                         :data => {:behaviour => 'card_barcode', :next => '#check_in_book_barcodes'} %>
      </div>
      <%= f.error_span(:card_barcode) %>
    </div>

    <div class="form-group">
      <%= f.label :book_barcodes, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_area :book_barcodes, :class => 'form-control', rows: 15 %>
      </div>
      <%= f.error_span(:book_barcodes) %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'Check In', :class => 'btn btn-primary' %>
      </div>
    </div>

<% end %>
